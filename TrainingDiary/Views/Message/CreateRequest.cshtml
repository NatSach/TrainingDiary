@model TrainingDiary.ViewModels.CreateRequestViewModel

@{
    ViewData["Title"] = "Send request";
}

<h4>Send request</h4>
<hr />
<p>
    You don't have a trainer. Try find new one!<br />
    Enter the email of the trainer you are looking for.
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send request" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}