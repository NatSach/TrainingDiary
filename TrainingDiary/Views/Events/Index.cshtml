@{
    ViewData["Title"] = "Events";
}

<h2>@ViewData["Title"]</h2>
<hr />

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-fullworkout-tab" data-toggle="pill" href="#pills-fullworkout"
           role="tab" aria-controls="pills-fullworkout" aria-selected="true">
            Workouts
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-camp-tab" data-toggle="pill" href="#pills-camp"
           role="tab" aria-controls="pills-camp" aria-selected="false">
            Camps
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-start-tab" data-toggle="pill" href="#pills-start"
           role="tab" aria-controls="pills-start" aria-selected="false">
            Starts
        </a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade show active" id="pills-fullworkout" role="tabpanel" aria-labelledby="pills-fullworkout-tab">
        @await Component.InvokeAsync("FullWorkoutList")
    </div>

    <div class="tab-pane fade" id="pills-camp" role="tabpanel" aria-labelledby="pills-camp-tab">
        @await Component.InvokeAsync("CampList")
    </div>
    <div class="tab-pane fade" id="pills-start" role="tabpanel" aria-labelledby="pills-start-tab">
        @await Component.InvokeAsync("StartList")
    </div>
</div>
